<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pessanha.com.myfirstapp.TouchActivity"
    tools:ignore="MergeRootFrame" >

    <pessanha.com.myfirstapp.PreviewSurfaceView
        android:id="@+id/preview_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </pessanha.com.myfirstapp.PreviewSurfaceView>

    <pessanha.com.myfirstapp.utils.DrawingView
        android:id="@+id/drawing_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </pessanha.com.myfirstapp.utils.DrawingView>
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/buttonClick"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/photoclick"
        android:onClick="onClick"
        android:background="@null" />
</FrameLayout>